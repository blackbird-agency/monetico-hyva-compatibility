                </arguments>
            </block>

            <block name="checkout.payment.method.monetico_3xcb"
                   as="monetico_3xcb"
            >
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="svg" xsi:type="string">blackbirdmonetico/3xcb-logo</item>
                            <item name="attributes" xsi:type="array">
                                <item name="fill" xsi:type="string">none</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>

            <block name="checkout.payment.method.monetico_4xcb"
